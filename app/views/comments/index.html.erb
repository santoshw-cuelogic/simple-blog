<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><span class="prev-link" data-no-turbolink><%= link_to 'Comments'.html_safe, comments_path %></span></li>
</ul>
<div class="panel-heading">
  <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Latest Articles </h3>
</div>
<div class="span12">
  <div class="grid simple ">
    <div class="grid-body ">
      <div role="grid" class="dataTables_wrapper form-inline" id="example2_wrapper">

      <%@articles.each do|article|%>
        <div class="post-preview">
          <h2 class="post-title"><%= link_to article.subject, new_comment_path(article_id: article.id) %></h2>
          <p class="post-meta">Posted by <a href="#">Start Bootstrap</a>  <%= article.posted_at.strftime("%A, %d %b %Y") rescue nil%></p>
          <p class="post-meta"><%= article.comments.count rescue nil%> Comments</p>
        </div>
        <hr>
      <%end%>

      </div>
    </div>
  </div>
</div>




