<ul class="breadcrumb">
  <li><p>YOU ARE HERE</p></li>
  <li><span class="prev-link" data-no-turbolink><%= link_to 'Blogs'.html_safe, articles_path %></span></li>
</ul>
<div class="panel-heading">
  <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Latest Articles </h3>
</div>

<div class="span12">
<div class="grid simple ">
<div class="grid-body ">
  <div class="row" data-no-turbolink>
    <div class="col-md-12">
      <%= link_to 'New post', new_article_path, class: "btn btn-primary newempl-btn"%>
    </div>
  </div><br/><br/>
<div role="grid" class="dataTables_wrapper form-inline" id="example2_wrapper">

<table id="id_leaves_list_table" class="table table-striped dataTable" aria-describedby="example2_info">
<thead>
<% unless @record_scope.blank? %>
<tr role="row">
<th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 100px;" aria-label="Rendering engine: activate to sort column ascending">Subject</th>
<th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 70px;" aria-label="Rendering engine: activate to sort column ascending">Details</th>
<th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 70px;text-align: left; " aria-label="Rendering engine: activate to sort column ascending">Status</th>
<th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 120px;" aria-label="Rendering engine: activate to sort column ascending">Posted At</th>
<th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 120px;" aria-label="Browser: activate to sort column ascending">Action</th>
</tr>
</thead>
<tbody role="alert" aria-live="polite" aria-relevant="all" id="id_user_tbody">
<% @record_scope.each do |article| %>
<tr class="gradeX odd">
<td class=" "><%= article.subject %></td>
<td class=" "><%= article.description.html_safe rescue nil %></td>
<td class=" "><%= article.status? ? "Published" : "Unpublished" %></td>
<td class=" "><%= article.posted_at.strftime("%A, %d %b %Y") rescue nil%></td>
<td data-no-turbolink>
  <%= link_to '<i title="Edit Leave Type" class="fa fa-edit"></i>'.html_safe, edit_article_path(article) %>
  <%= link_to '<i title="Delete Leave Type" class="fa fa-trash-o"></i>'.html_safe, article, method: :delete, data: { confirm: 'Are you sure?' } %>
</td>
</tr>
<% end %>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
</div>